<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Thông tin cửa hàng</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Trang quản lý</a></li>
            <li class="breadcrumb-item active">Thông tin cửa hàng</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <!-- left column -->
        <div class="col-md-6">
          <!-- general form elements -->
          <div class="card card-primary">
            
            <!-- /.card-header -->
            <!-- form start -->
            <form role="form" action="save-information" method="post">
              <div class="card-body">
                <div class="form-group">
                  <label>Tên quán</label>
                  <input type="text" class="form-control" name="name" value="<%= restaurant.name %>" placeholder="Nhập tên quán">
                </div>
                <div class="form-group">
                  <label>Địa chỉ</label>
                  <input type="text" class="form-control" name="address" value="<%= restaurant.address %>" placeholder="Nhập địa chỉ quán">
                </div>
                <div class="form-group">
                  <label for="exampleFormControlFile1">Chọn ảnh đại diện quán (hiển thị mobile)</label>
                  <input type="text" class="form-control" name="thumbnail" value="<%= restaurant.thumbnail %>" placeholder="Nhập link ảnh món ăn">
                </div>
                <div class="form-group">
                  <label for="exampleFormControlTextarea1">Mô tả</label>
                  <textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="3"><%= restaurant.description %></textarea>
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
      </div>
      <!-- /.row -->
    </div><!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>